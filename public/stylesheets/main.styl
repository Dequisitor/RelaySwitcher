body
	background-color #00cfff
	
	header
		margin 5px 10px 0px 0px
		padding 10px 0px
		background-color #ff7900
		color #ffffff
		font-size 25px
		text-align center
	
	.container
		margin 50px auto
		width 280px
		overflow hidden

		.main-content
			div
				box-sizing border-box

			div.entry
				cursor pointer
				user-select none
				display block
				margin 10px
				width auto
				height auto
				
				div.label
					display inline-block
					height 30px
					width auto
					padding 5px 15px 5px 5px
					vertical-align middle
					
					p
						font-size 18px
						margin 0
				
				div.button-container
					display inline-block
					position relative
					vertical-align middle
					
					div.button-background
						background-color black
						border 3px solid black
						border-radius 10px
						width 80px
						height 30px
						
						
						span
							font-size 12px
							text-align center
							font-weight bold
							margin 5px
							
						span.left
							float left
							color green
					
						span.right
							float right
							color red
					
					div.button-slider
						position absolute
						left 0px
						top 0px
						height 30px
						width 50px
						background-color white
						border 3px solid black
						border-radius 10px
						-mz-transition left 1s
						-webkit-transition left 1s
						transition left 1s
						
					div.button-slider.on
						left 30px
				
			
	footer
		margin 50px auto
		padding 0px 10px
		border-top 1px dotted #333333
		font-size 13px

@media screen and (max-width: 1080px)
	body
		zoom 200%
		width 100%
